<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/child_layout"
    android:background="@drawable/umbrellas_child_bg"
    android:orientation="vertical" >
    
     <TextView android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:layout_centerHorizontal="true"
                android:text="ADD A CHILD PROFILE"
                android:padding="5dp"
                android:textSize="20sp"
                android:background="@android:color/white"
                android:layout_marginTop="5dp"
                android:textStyle="bold"/>
     

    <Button
        android:id="@+id/button1_childsubmit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:background="@drawable/find_playdate_friend_button"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="15dp" />

    <EditText
        android:id="@+id/edit_childallergies"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/button1_childsubmit"
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:background="@drawable/text_field"
        android:hint="ALLERGIES"
        android:inputType="textMultiLine"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:singleLine="false"
        android:textColor="#0097dc"
        android:textSize="13dp"
        android:textStyle="bold"
        android:typeface="sans" />

    <EditText
        android:id="@+id/edit_Dob"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/edit_childallergies"
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:background="@drawable/text_field"
        android:ems="10"
        android:hint="DATE OF BIRTH"
        android:lines="1"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:singleLine="true"
        android:textColor="#0097dc"
        android:textSize="13dp"
        android:textStyle="bold"
        android:typeface="sans" />

    <EditText
        android:id="@+id/edit_childname_last"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/edit_Dob"
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:background="@drawable/text_field"
        android:ems="10"
        android:hint="CHILD LAST NAME"
        android:lines="1"
        android:padding="15dp"
        android:paddingLeft="15dp"
        android:singleLine="true"
        android:textColor="#0097dc"
        android:textSize="13dp"
        android:textStyle="bold"
        android:typeface="sans" >
    </EditText>

    <EditText
        android:id="@+id/edit_childname"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/edit_childname_last"
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:background="@drawable/text_field"
        android:ems="10"
        android:hint="CHILD FIRST NAME"
        android:lines="1"
        android:padding="15dp"
        android:paddingLeft="15dp"
        android:singleLine="true"
        android:textColor="#0097dc"
        android:textSize="13dp"
        android:textStyle="bold"
        android:typeface="sans" >
    </EditText>

    <com.iapptechnologies.time.util.Rounded_image_view
        android:id="@+id/imageView1_child"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:layout_above="@+id/edit_childname"
        android:layout_centerHorizontal="true"
        android:background="@drawable/place_holder_with_text" />

</RelativeLayout>